<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_margin="25dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnImgPerm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="IMAGE - NORMAL PERMISSION"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imgGambar"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnImgPerm" />

    <Button
        android:id="@+id/btnInternetPerm"
        android:text="INTERNET - NORMAL PERMISSION"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imgGambar" />

    <Button
        android:id="@+id/btnLocPerm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOCATION - DANGEROUS PERMISSION"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/btnInternetPerm" />

    <Button
        android:id="@+id/btnDangerPerm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="CAMERA - DANGEROUS PERMISSION"
        app:layout_constraintTop_toBottomOf="@+id/btnLocPerm"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>